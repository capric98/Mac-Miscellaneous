{
    "title": "capric98's rules",
    "rules": [
        {
            "description": "Ctrl+Command+A -> Take a Screenshot(flameshot)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "a",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "osascript -e 'ignoring application responses\n  tell application \"System Events\" to tell process \"Flameshot\"\n    tell menu bar item 1 of menu bar 2\n      click\n    end tell\n  end tell\nend ignoring\ndelay 0.1\ndo shell script \"killall System\\\\ Events\"\n\ntell application \"System Events\" to tell process \"Flameshot\"\n  tell menu bar item 1 of menu bar 2\n    click menu item \"Take Screenshot\" of menu 1\n  end tell\nend tell'"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Press left_control Twice -> Search",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "name": "key pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "spacebar",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "to_delayed_action",
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "key pressed",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "key pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "key pressed",
                                    "value": 0
                                }
                            }
                        ]
                    },
                    "type": "basic"
                }
            ]
        }
    ]
}
